{
  "name": "cdk-sops-secrets",
  "description": "CDK Constructs that syncs your sops secrets into AWS SecretsManager secrets.",
  "version": "2.4.7",
  "license": "Apache-2.0",
  "author": {
    "name": "Markus Siebert",
    "email": "markus.siebert@deutschebahn.com",
    "organization": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dbsystel/cdk-sops-secrets.git"
  },
  "homepage": "https://constructs.dev/packages/cdk-sops-secrets",
  "keywords": [
    "cdk",
    "getsops/sops",
    "gitops",
    "kms",
    "mozilla/sops",
    "secrets",
    "secrets management",
    "sops"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "stability": "stable",
  "peerDependencies": {
    "aws-cdk-lib": "^2.227.0",
    "constructs": "^10.0.5"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "aws-cdk": "^2",
    "aws-cdk-lib": "2.227.0",
    "commit-and-tag-version": "^12.4.4",
    "constructs": "10.0.5",
    "eslint": "^9",
    "eslint-config-prettier": "^8.10.2",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^4.2.5",
    "jest": "^27.5.1",
    "jest-junit": "^16",
    "jsii": "5.9.14",
    "jsii-diff": "1.120.0",
    "jsii-docgen": "10.11.4",
    "jsii-pacmak": "1.120.0",
    "jsii-rosetta": "5.9.15",
    "json-schema-to-typescript": "^15.0.4",
    "prettier": "^2.8.8",
    "renovate": "^42.25.0",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "coverageProvider": "v8",
    "testMatch": [
      "<rootDir>/@(src|test)/**/*(*.)@(spec|test).ts?(x)",
      "<rootDir>/@(src|test)/**/__tests__/**/*.ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lambda/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lambda/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  },
  "jsii": {
    "outdir": "dist",
    "targets": {
      "java": {
        "package": "de.db.systel.cdksopssecrets",
        "maven": {
          "groupId": "de.db.systel",
          "artifactId": "cdk-sops-secrets"
        }
      },
      "python": {
        "distName": "cdk-sops-secrets",
        "module": "cdk_sops_secrets"
      },
      "dotnet": {
        "namespace": "Db.De.Systel",
        "packageId": "Db.De.Systel.CdkSopsSecrets"
      }
    },
    "tsc": {
      "outDir": "lib",
      "rootDir": "src"
    }
  },
  "scripts": {
    "release:tag": "commit-and-tag-version"
  },
  "bundleDependencies": [
    "yaml"
  ],
  "commit-and-tag-version": {
    "scripts": {
      "postbump": "git restore package-lock.json && npm i --package-lock-only"
    }
  }
}
