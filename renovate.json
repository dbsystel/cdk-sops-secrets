{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["gomod", "npm", "mise"],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "go-deps",
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm-deps",
      "automerge": true
    },
    {
      "matchManagers": ["mise"],
      "groupName": "mise-tools",
      "automerge": true
    }
  ],
  "postUpdateOptions": ["gomodTidy"],
  "postUpgradeTasks": {
    "commands": ["mise run jsii-docgen"],
    "fileFilters": ["package.json", "package-lock.json"],
    "executionMode": "update"
  },
  "labels": ["auto-approve"]
}
