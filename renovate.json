{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["gomod", "npm", "mise", "github-actions"],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "go-deps",
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm-deps",
      "automerge": true,
      "postUpgradeTasks": {
        "commands": ["mise run jsii-docgen"],
        "fileFilters": ["package.json", "package-lock.json", "API.md"],
        "executionMode": "update"
      }
    },
    {
      "matchManagers": ["mise"],
      "groupName": "mise-tools",
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "automerge": true
    }
  ],
  "postUpdateOptions": ["gomodTidy"],
  "labels": ["auto-approve"]
}
