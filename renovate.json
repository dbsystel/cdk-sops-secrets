{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["gomod", "npm", "mise"],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "go-deps",
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm-deps",
      "automerge": true
    },
    {
      "matchManagers": ["mise"],
      "groupName": "mise-tools",
      "automerge": true
    }
  ],
  "postUpdateOptions": ["gomodTidy"],
  "labels": ["auto-approve"]
}
